COMPILER Aritmetica    

CHARACTERS 

letter = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz". 
digit = "0123456789" .
tab = CHR(9).
eol = CHR(10).

TOKENS

ident = letter{letter|digit} EXCEPT KEYWORDS.
number = digit{digit}.

PRODUCTIONS

Expr= {Stat ";"}".".

Stat = 							(.value = 0.)
	Expression<value>		(.print(value).)
	.

Expression<result> =		(.result1,result2 = 0, 0.)
	Term<result1>
	{    "+"Term<result2>		(.result1+=result2.)
	   | "-"Term<result2>		(.result1-=result2.)
	}							(.result=result1.)
	.

Term<result>=				(.result1,result2 = 0, 0.)
	Factor<result1>
	{    "*"Factor<result2>	(.result1*=result2.)
	   | "/"Factor<result2>	(.result1/=result2.)
	}							(.result=result1.)
	.
	
Factor<result> =	(.signo=1.)
	["-"(.signo = -1.)]
	( Number<result> | "("Expression<result>")") (.result*=signo.).
	
Number<result> =  number (.result = int(lastToken.value).).

END Aritmetica